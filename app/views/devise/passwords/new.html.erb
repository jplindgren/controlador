<div class="container">

	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-auth', :role => 'form' }) do |f| %>
	
		<h2 class="form-auth-heading">Forgot your password?</h2>
		<%= devise_error_messages! %>

		<%= f.email_field :email, :autofocus => true, :class => 'form-control', :placeholder => :email %><br/>

		<div><%= f.submit "Send me reset password instructions", :class => 'btn btn-lg btn-primary btn-block' %></div>

		<%= render "devise/shared/links" %>
	<% end %>	

</div>
