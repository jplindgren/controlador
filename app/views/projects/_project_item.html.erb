<div class="row well" id="<%= project_item.id %>">
    <div class="col-md-3">
        <img alt="150x150" src="http://lorempixel.com/150/150/" />
    </div>
    <div class="col-md-9">
        <h4>
            <strong><%= project_item.name %></strong>
        </h4>
        <div class="progress progress-striped active">
            <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0"
                     aria-valuemax="<%= project_item.progress %>" style="width: <%= project_item.progress %>%;">
                     <%= number_to_percentage(project_item.progress, precision: 2) %>
          </div>
        </div>
        <div class="btn-group btn-group-xs">
            <%= link_to new_project_ticket_path(project_item), :class => "btn btn-default" do %>
                <em class="glyphicon glyphicon-record"></em> Add Ticket
            <% end %>
            <%= link_to edit_project_path(project_item), :class => "btn btn-default" do %>
                <em class="glyphicon glyphicon-edit"></em> Edit Project
            <% end %>
            <%= link_to project_path(project_item), 
                                    method: :delete, data: { confirm: 'Are you sure?' } , 
                                    :class => "btn btn-default" do %>
                <em class="glyphicon glyphicon-remove"></em> Remove Project
            <% end %>
            <a href="" class="btn btn-default">
                <em class="glyphicon glyphicon-question-sign"></em> Ask Question
            </a>
        </div>
        <div class="pull-right">
            <%= link_to 'GO!', project_path(project_item.id), :class => "btn btn-primary" %>
        </div>
    </div>
</div>



