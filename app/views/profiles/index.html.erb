<h1>Listing profiles</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr id="<%= dom_id(profile) %>">
        <td><%= profile.name %></td>
        <td><%= profile.email %></td>
        <td><%= link_to 'Show', profile %></td>
        <% if (user_signed_in? && current_user == profile.user) %>
          <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
          <td><%= link_to 'Destroy', profile, method: :delete, :remote => true, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path unless !user_signed_in? || current_user.already_has_profile?  %>
